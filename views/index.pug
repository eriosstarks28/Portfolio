extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      
      h1 My Portfolio

       
      p.lead.text-light
        | Hi, this portfolio is a marketing document meant to demostate my skills and technical ability as a Full-Stack JavaScript Devloper. As well as getting to know a little bit about me!
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

       each project in projects
        .cell
      
         a(href= project.id)
           img.thumbnail(src= project.image_urls[0])
           h5 #{project.project_name}
      
      
      
      
      
     
